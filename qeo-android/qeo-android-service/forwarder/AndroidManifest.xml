<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.qeo.android.service" >

    <application>
        <service android:name="org.qeo.android.forwarder.QeoForwarderService" >
        </service>

        <activity
            android:name="org.qeo.android.forwarder.QeoForwarderActivity"
            android:label="@string/app_name_forwarder"
            android:theme="@style/DialogTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>